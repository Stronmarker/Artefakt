{% extends 'base.logged.html.twig' %}

{% block title %}Create Project{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 ft_orbitron text-light">Create Project</h1>
        
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white fr_orbitron">
                Project Details
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    <div class="form-group row mb-3 anton-regular">
                        {{ form_label(form.projectName, 'Nom du Projet', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.projectName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row mb-3 anton-regular">
                        {{ form_label(form.clientName, 'Nom du Client', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.clientName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-success">Cr√©er le Projet</button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
