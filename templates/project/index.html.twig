{% extends 'base.logged.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
<style>
    .project-card {
        cursor: pointer;
        transition: transform 0.3s ease;
    }
    .project-card:hover {
        transform: scale(1.05);
    }
    .project-card a {
        text-decoration: none;
        color: inherit;
    }
    .project-card h3 {
        margin-top: 0;
    }
    .create-card {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        font-size: 1.5em;
        background-color: #f8f9fa;
        border: 2px dashed #6c757d;
        height: 100%;
    }
</style>

<div class="container mt-4">
    <h1>Projects</h1>

    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card project-card create-card">
                <a href="{{ path('project_create') }}">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <h3 class="card-title">+ Créer un nouveau projet</h3>
                    </div>
                </a>
            </div>
        </div>
        {% for project in projects %}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card project-card">
                    <a href="{{ path('project_show', {id: project.id}) }}">
                        <div class="card-body text-center">
                            <h3 class="card-title">{{ project.projectName }}</h3>
                            <p class="card-text ft_orbitron">Créé le : {{ project.createdAt|date('d/m/Y H:i:s') }}</p>
                        </div>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
