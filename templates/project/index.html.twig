{% extends 'base.logged.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
<div class="container mt-4" data-controller="sweetalert">
    <h1 class="m-5 text-light ft_orbitron">Mes Projets</h1>

    <div class="row p-4">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card create-card box-shadow p-5">
                <a href="{{ path('project_create') }}" class="text-decoration-none">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <h2 class="card-title text-success ft_orbitron h3">+ Créer un nouveau projet</h3>
                    </div>
                </a>
            </div>
        </div>

       
        {% for project in projects %}

            <div class="col-lg-4 col-sm-2 mb-4">
                <div class="card project-card box-shadow">
                    <a href="{{ path('project_show', {id: project.id}) }}">
                        <div class="card-body text-center">
                            <h3 class="card-title text-success">{{ project.projectName }}</h3>
                            <p class="card-text ft_orbitron">Créé le : {{ project.createdAt|date('d/m/Y') }}</p>
                            <p class="card-text ft_orbitron">Créé le : {{ project.updatedAt|date('d/m/Y') }}</p>
                        </div>
                    </a>
                    <div class="card-footer d-flex justify-content-between">
                        <button onclick="window.location.href='{{ path('project_edit', {id: project.id}) }}'" class="btn btn-dark btn-edit">
                            <i class="fas fa-edit"></i> Modifier
                        </button>
                        <form class="delete-form" method="post"
                            action="{{ path('project_delete', {'id': project.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                            <button type="submit" class="btn btn-danger btn-delete">
                                <i class="fas fa-trash-alt"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}