{% extends 'base.logged.html.twig' %}

{% block title %}Project Details{% endblock %}

{% block body %}

<div class="d-flex flex-column">  {# Ajout de flexbox pour que le contenu prenne toute la hauteur de la fenÃªtre #}
    <div class="container mt-5 mb-5 p-4 flex-grow-1">
        <div class="d-flex justify-content-start mb-3">
            <a href="{{ path('app_project') }}" class="btn btn-secondary btn-small">Retour aux projets</a>
        </div>

        <h1 class="m-5 text-light">Nom du projet : {{ project.projectName }}</h1>

        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card create-card box-shadow">
                    <a href="{{ path('rendering_create',{ id: project.id }) }}" class="text-decoration-none">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <h2 class="card-title text-success p-2">+ Ajouter un nouveau rendu</h2>
                        </div>
                    </a>
                </div>
            </div>
            {% for rendering in renderings %}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card rendering-card box-shadow">
                    <a href="{{ path('rendering_show', {'project_id': project.id, 'rendering_id': rendering.id}) }}">
                        <div class="card-body text-center">
                            <h3 class="card-title">{{ rendering.renderingName }}</h3>
                            <img style="width:25%" src="{{ vich_uploader_asset(rendering, 'frontPngFile') }}">
                        </div>
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
