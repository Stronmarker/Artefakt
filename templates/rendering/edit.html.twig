{% extends 'base.logged.html.twig' %}

{% block title %}Modifier le Rendu{% endblock %}

{% block body %}
<div class="container mt-5 p-5" data-controller="sweetalert">
    <div class="card box-shadow bg-white p-3">
        
        <h1 class="mb-4 text-success text-center ft_orbitron">Modification du Rendu : {{ rendering.renderingName }}</h1>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'form-horizontal edit-form'}}) }}
                <div class="form-group row mb-5">
                    {{ form_label(form.renderingName, 'Nom du Rendu', {'label_attr': {'class': 'col-form-label ft_orbitron'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.renderingName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row mb-5">
                    {{ form_label(form.frontPngFile, 'Face avant', {'label_attr': {'class': 'col-form-label ft_orbitron'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.frontPngFile, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row mb-5">
                    {{ form_label(form.towardPngFile, 'Face arriÃ¨re', {'label_attr': {'class': 'col-form-label ft_orbitron'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.towardPngFile, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-success">Enregistrer</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}