{% extends 'base.logged.html.twig' %}

{% block title %}Rendering Details{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Rendering</h1>

    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card project-card create-card">
                <a href="{{ path('rendering_create') }}">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <h3 class="card-title">+ Create a new Rendering</h3>
                    </div>
                </a>
            </div>
        </div>
        {% for project in projects %}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card project-card">
                    <a href="{{ path('rendering_show', {id: rendering.id}) }}">
                        <div class="card-body text-center">
                            <h3 class="card-title">{{ rendering.renderingName }}</h3>
                        </div>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}