{% extends 'base.off.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<style>
    @media (max-width: 768px) {
        .form-signin {
            padding: 15px;
        }
        .mt-sm-5 {
            margin-top: 0 !important; /* Réduit la marge en haut pour les petits écrans */
        }
    }
    #inputEmail::placeholder, #inputPassword::placeholder {
        color: rgb(252, 201, 201);
    }
</style>

<div class="container mt-5 mb-3"> <!-- Ajout de la classe my-5 pour l'espacement uniforme -->
    <div class="row justify-content-center">
        <div class="col-lg-6"> <!-- Utilisation de col-lg-6 pour rendre le formulaire plus large sur les écrans larges -->
            <form method="post" class="form-signin" style="background: rgba(85, 85, 85, 1); border-radius: 8px; box-shadow: 0 0 15px red; padding: 20px;">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 text-muted">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}

                <h1 class="h1 mb-3 font-weight-normal text-center text-light ft_audiowide">Connexion</h1>
                
                <div class="form-group mt-4 mb-4">
                    <label class="p-2 m-1 h5 text-danger ft_audiowide" for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email"
                    placeholder="mail@mail.com" style="background: transparent; border: 1px solid red; color: white" required autofocus>
                </div>
                
                <div class="form-group mt-4 mb-4">
                    <label class="p-2 m-1 h5 text-danger ft_audiowide" for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
                    placeholder="******" required style="background: transparent; border: 1px solid red; color: white">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox mb-3">
                    <label class="text-light">
                        <input type="checkbox" name="_remember_me" style="accent-color: red;">
                        <span class="ft_audiowide">Se souvenir de moi</span>
                    </label>
                </div>
                
                <div class="mt-3 text-center">
                    <p class="text-light mb-0">Pas encore de compte ?<br>
                        <a href="{{ path("app_register") }}" class="text-danger">Créer un compte</a>
                    </p>
                    <p class="text-light mb-0 mt-2">Vous avez oublié votre mot de passe ?<br>
                        <a href="{{ path("app_forgot_password_request") }}" style="color: red;">Réinitialiser mon mot de passe</a>
                    </p>
                </div>

                <button class="btn btn-lg btn-danger btn-block mt-4" type="submit">Connexion</button>

            </form>
        </div>
    </div>
</div>
{% endblock %}
