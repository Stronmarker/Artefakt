{% extends 'base.off.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<style>
    @media (max-width: 768px) {
        .form-signup {
            padding: 15px;
        }
    }
  
    .form-control::placeholder {
        color: rgb(107, 207, 183);
    }
  
        
        /* Ajoutez d'autres styles selon vos besoins */
    
</style>

<!-- Ajout de SweetAlert -->
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.12/dist/sweetalert2.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.12/dist/sweetalert2.min.js"></script> 

<div class="container mt-4 mb-2">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <form method="post" class="form-signup" style="padding: 20px; background: rgba(252, 251, 251); border-radius: 8px; box-shadow: 0 0 15px white; border: 5px solid black">
                {% for flash_success in app.flashes('success') %}
                    <script>
                        Swal.fire({
                            title: 'Success',
                            text: '{{ flash_success }}',
                            icon: 'success',
                            confirmButtonText: 'Ok',
                            customClass: {
                                popup: 'my-swal-popup'
                            }
                        });
                        
                    </script>
                {% endfor %}

                <h1 class="h1 mb-2 font-weight-normal text-center text-dark ft_orbitron">Inscription</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
                
                <div class="form-group mt-2 mb-2">
                    {{ form_row(registrationForm.email, {
                        'label': 'Email',
                        'label_attr': {'class': 'p-2 m-1 h5 text-dark ft_audiowide'},
                        'attr': {'class': 'form-control', 'style': 'background: transparent; border: 2px solid green; color: dark', 'placeholder': "mail@mail.com"}
                    }) }}
                </div>

                <div class="form-group mt-2 mb-2">
                    {{ form_row(registrationForm.plainPassword, {
                        'label': 'Password',
                        'label_attr': {'class': 'p-2 m-1 h5 text-dark ft_audiowide'},
                        'attr': {'class': 'form-control', 'style': 'background: transparent; border: 2px solid green; color: dark', 'placeholder': "******"}
                    }) }}
                </div>

                <div class="form-group mt-2 mb-2">
                    {{ form_row(registrationForm.firstname, {
                        'label': 'Prénom',
                        'label_attr': {'class': 'p-2 m-1 h5 text-dark ft_audiowide'},
                        'attr': {'class': 'form-control', 'style': 'background: transparent; border: 2px solid green; color: dark', 'placeholder': "Votre Prénom"}
                    }) }}
                </div>

                <div class="form-group mt-2 mb-2">
                    {{ form_row(registrationForm.lastname, {
                        'label': "Nom de famille",
                        'label_attr': {'class': 'p-2 m-1 h5 text-dark ft_audiowide'},
                        'attr': {'class': 'form-control', 'style': 'background: transparent; border: 2px solid green; color: dark', 'placeholder': "Votre Nom"}
                    }) }}
                </div>

                <div class="checkbox mb-2">
                    {{ form_widget(registrationForm.agreeTerms, {
                        'attr': {'class': 'text-dark', 'style': 'accent-color: green;'}
                    }) }}
                    {{ form_label(registrationForm.agreeTerms, null, {
                        'label_attr': {'class': 'text-dark'}
                    }) }}
                </div>
                
                <button type="submit" class="btn btn-lg btn-success btn-block" style="display: block; margin: 20px auto; width: 80%; max-width: 300px; padding: 10px 0; font-size: 16px;">Register</button>
                
                {{ form_end(registrationForm) }}
            </form>
        </div>
    </div>
</div>



{% endblock %}