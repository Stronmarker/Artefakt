{% extends 'base.logged.html.twig' %}

{% block title %}Abonnements{% endblock %}

{% block body %}

{# stylisation de certains paramètres du code car pas réussi en boostrap #}
<style>
    .pricing-table {
        margin-top: 50px; 
    }
    .pricing-card {
        background-color: rgb(254, 250, 250); 
        border: 1px solid #000000; 
        border-radius: 10px;
        transition: all 0.3s ease;
    }
    
    .pricing-card .list-group-item {
        background-color: transparent;
        border: none;
    }
</style>

<div class="container mt-5 mb-5"> 
    <div class="row pricing-table">
        <div class="col-md-4">
            <div class="card mb-4 mt-5 pricing-card"> 
                <div class="card-body">
                    <h5 class="card-title text-success fw-bold">Abonnement de Base</h5>
                    <h6 class="card-subtitle mb-2 text-dark">€9.99/mois</h6>
                    <p class="card-text text-dark fw-bold">Accès de base à nos services.</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-dark fw-bold">Avantage 1</li>
                        <li class="list-group-item text-dark fw-bold">Avantage 2</li>
                        <li class="list-group-item text-dark fw-bold">Avantage 3</li>
                        <li class="list-group-item text-dark fw-bold">Avantage 4</li>
                    </ul>
                    <a href="#" class="btn btn-success mt-3 fw-bold">Souscrire</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 mt-5 pricing-card"> 
                <div class="card-body">
                    <h5 class="card-title text-success fw-bold">Abonnement Médium</h5>
                    <h6 class="card-subtitle mb-2 text-dark">€14.99/mois</h6>
                    <p class="card-text text-dark fw-bold">Accès de base plus certaines fonctionnalités.</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-dark fw-bold">Avantage 1</li>
                        <li class="list-group-item text-dark fw-bold">Avantage 2</li>
                        <li class="list-group-item text-dark fw-bold">Avantage 3</li>
                        <li class="list-group-item text-dark fw-bold">Avantage 4</li>
                    </ul>
                    <a href="#" class="btn btn-success mt-3 fw-bold">Souscrire</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 mt-5 pricing-card"> 
                <div class="card-body">
                    <h5 class="card-title text-success fw-bold">Abonnement Premium</h5>
                    <h6 class="card-subtitle mb-2 text-dark">€19.99/mois</h6>
                    <p class="card-text text-dark fw-bold">Accès complet à toutes nos fonctionnalités.</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-dark fw-bold">Avantage 1</li>
                        <li class="list-group-item text-dark fw-bold">Avantage 2</li>
                        <li class="list-group-item text-dark fw-bold">Avantage 3</li>
                        <li class="list-group-item text-dark fw-bold">Avantage 4</li>
                    </ul>
                    <a href="#" class="btn btn-success mt-3 fw-bold">Souscrire</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5"> 
    <div class="comparison-table">
        <table class="table table-bordered table-dark">
            <thead>
                <tr>
                
